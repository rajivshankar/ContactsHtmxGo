<!-- Navigation Buttons -->
{{ if eq .full "Y"}}
<footer>
  <span style="float: right">
    {{ if .prev }}
    <button
      class="btn btn-outline btn-info"
      hx-get="/contacts/all?page={{ .prev }}"
      hx-target="#contact_list"
    >
      Previous Page
    </button>
    {{ end }}
    {{ if .next }}
    <button
      class="btn btn-outline btn-info"
      hx-get="/contacts/all?page={{ .next }}"
      hx-target="#contact_list"
    >
      Next Page
    </button>
    {{ end }}
  </span>
</footer>
{{ end }}
{{ end }}
